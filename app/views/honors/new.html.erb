<%= form_for(@honor) do |f| %>
  <div class="form-all">
    <ul class="form-section page-section">
      <li id="cid_1" class="form-input-wide" data-type="control_head">
        <div class="form-header-group">
          <div class="header-text httal htvam">
            <h2 id="header_1" class="form-header">
              Add Extra Course
            </h2>
          </div>
        </div>
      </li>
       <li class="form-line" data-type="control_textbox" id="id_5">
        <label class="form-label form-label-left form-label-auto" id="label_5" for="input_5"> Uid </label>
        <div id="cid_5" class="form-input jf-required">
         <%= f.text_field :uid, size: 25,:readonly => true  %>
        </div>
      </li>
      <li class="form-line" data-type="control_textbox" id="id_4">
        <label class="form-label form-label-left form-label-auto" id="label_4" for="input_4"> Course Id </label>
        <div id="cid_4" class="form-input jf-required">
          <!-- <%= f.text_field :course_id, size: 25  %> -->
           
          <%= f.collection_select :course_id, Course.all, :course_id, :course_id, :include_blank => "Select a Course" %>&nbsp;&nbsp; <%= link_to "    Add New Course", new_course_path %>
        </div>
      </li>
      <li class="form-line" data-type="control_textbox" id="id_3">
        <label class="form-label form-label-left form-label-auto" id="label_3" for="input_3"> contract_id </label>
        <div id="cid_3" class="form-input jf-required">
         <%= f.text_field :contract_id, size: 25  %>
        </div>
      </li>
     
      <li class="form-line" data-type="control_dropdown" id="id_14">
        <label class="form-label form-label-left form-label-auto" id="label_14" for="input_14"> Semester </label>
        <div id="cid_14" class="form-input jf-required">
          <%= f.select(:semester, options_for_select([['Fall','fall'],['Spring','spring'],['Summer','summer']])) %> 
        </div>
      </li>
      <li class="form-line" data-type="control_textbox" id="id_7">
        <label class="form-label form-label-left form-label-auto" id="label_7" for="input_7"> Year </label>
        <div id="cid_7" class="form-input jf-required">
          <%= f.text_field :year, size: 25  %>
        </div>
      </li>
      <li class="form-line" data-type="control_email" id="id_12">
        <label class="form-label form-label-left form-label-auto" id="label_12" for="input_12"> Professor mail id </label>
        <div id="cid_12" class="form-input jf-required">
          <%= f.text_field :prof_email, size: 25  %>
        </div>
      </li>
      <li class="form-line" data-type="control_dropdown" id="id_13">
        <label class="form-label form-label-left form-label-auto" id="label_13" for="input_13"> Grade </label>
       <%= f.select(:grade, options_for_select([['A+','A+'],['A','A'],['A-','A-'],['B+','B+'],['B','B'],['B-','B-'],['C+','C+'],['C','C'],['C-','C-'],['D+','D+'],['D','D'],['D-','D-'],['F','F']])) %>
        </div>
      </li>
      <li class="form-line form-line-column form-col-1" data-type="control_fileupload" id="id_10">
        <label class="form-label form-label-top" id="label_10" for="input_10"> Upload the document : </label>
        <div id="cid_10" class="form-input-wide jf-required">
         <label for="upload_file">Select File</label> : 
         <%= file_field 'upload', :pdf %></p>
         
        </div>
      </li>
      <li class="form-line" data-type="control_button" id="id_11">
        <div id="cid_11" class="form-input-wide">
          <div style="margin-left:o156px" class="form-buttons-wrapper">
            <button id="input_11" type="submit" class="form-submit-button">
              Submit
            </button>
            &nbsp;
            <button id="input_reset_11" type="reset" class="form-submit-reset">
              Clear Form
            </button>
          </div>
        </div>
      </li>
      <li style="display:none">
        Should be Empty:
        
      </li>
    </ul>
  </div>
  
   
<% end %>